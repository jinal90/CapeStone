<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.udacity.food.feasta.foodfeasta.ui.LoginScreenActivity">


    <ImageView
        android:id="@+id/imgBanner"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:src="@drawable/login_banner" />

    <RadioGroup
        android:id="@+id/radioGroupUserType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imgBanner"
        android:layout_centerHorizontal="true">

        <RadioButton
            android:id="@+id/radioCustomer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Table Customer" />


        <RadioButton
            android:id="@+id/radionManager"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Restaurant Manager" />
    </RadioGroup>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/tlInputLayout"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/radioGroupUserType"
        android:layout_centerHorizontal="true">

        <EditText
            android:id="@+id/edtInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Table No." />

    </android.support.design.widget.TextInputLayout>

    <Button
        android:id="@+id/btnSubmit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tlInputLayout"
        android:layout_centerHorizontal="true"
        android:text="Submit" />
</RelativeLayout>
